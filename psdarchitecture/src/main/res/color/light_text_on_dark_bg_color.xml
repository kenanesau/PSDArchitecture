<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:color="@color/light_text_hint"/>
    <item android:state_enabled="true" android:color="@color/light_text_primary"/>
    <item android:state_window_focused="false" android:color="@color/light_text_primary"/>
    <item android:state_pressed="true" android:color="@color/primary_dark"/>
