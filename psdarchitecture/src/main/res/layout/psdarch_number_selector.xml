<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/psdarch_number_selector">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="0dp">

        <com.privatesecuredata.arch.ui.widget.Fab
            android:id="@+id/psdarch_number_selector_btn_up"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:visibility="visible"
            android:elevation="@dimen/elevation"
            android:background="@drawable/upper_rounded_button"
            android:stateListAnimator="@anim/fab_animate_elevation"
            fab:icon_default="@drawable/ic_arrow_up"
            fab:disable_outline="true"
            android:onClick="onButtonClick"
            android:layout_marginBottom="@dimen/raster2"
            />

        <TextView android:layout_width="72dp"
            android:id="@+id/psdarch_number_selector_txt_number"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:elevation="0dp"
            android:layout_marginBottom="@dimen/raster2"/>

        <com.privatesecuredata.arch.ui.widget.Fab
            android:id="@+id/psdarch_number_selector_btn_down"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:visibility="visible"
            android:elevation="@dimen/elevation"
            android:background="@drawable/lower_rounded_button"
            android:stateListAnimator="@anim/fab_animate_elevation"
            fab:icon_default="@drawable/ic_arrow_down"
            fab:disable_outline="true"
            android:onClick="onButtonClick"
            android:layout_marginBottom="@dimen/raster2"
            />
    </LinearLayout>

</merge>
