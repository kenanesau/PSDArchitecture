<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
       xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/psdarch_number_selector">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="3"
        android:elevation="0dp">
        <com.privatesecuredata.arch.ui.widget.Fab
            android:id="@+id/psdarch_number_selector_btn_down"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:gravity="start"
            app:layout_column="0"
            android:visibility="visible"
            android:elevation="@dimen/elevation"
            android:background="@drawable/left_rounded_button"
            app:icon_default="@drawable/ic_arrow_left"
            app:disable_outline="true"
            android:onClick="onButtonClick"
            android:layout_marginRight="@dimen/raster2"
            android:layout_marginEnd="@dimen/raster2"
            />

        <TextView android:layout_width="72dp"
                  android:layout_height="72dp"
                  app:layout_gravity="fill_horizontal"
                  app:layout_column="1"
                  android:id="@+id/psdarch_number_selector_txt_number"
                  android:textSize="22sp"
                  android:gravity="center"
                  android:textAlignment="center"
                  android:textColor="@color/black"
                  android:elevation="0dp"
                  android:layout_marginRight="@dimen/raster2"
                  android:layout_marginEnd="@dimen/raster2"/>

        <com.privatesecuredata.arch.ui.widget.Fab
            android:id="@+id/psdarch_number_selector_btn_up"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:layout_column="2"
            android:visibility="visible"
            android:elevation="@dimen/elevation"
            android:background="@drawable/right_rounded_button"
            app:icon_default="@drawable/ic_arrow_right"
            app:disable_outline="true"
            android:onClick="onButtonClick"
            android:layout_marginBottom="@dimen/raster2"
            />

    </android.support.v7.widget.GridLayout>

</merge>
